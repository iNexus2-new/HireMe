@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Завършване на регистрацията";
}

<div class="wrapper">
    <partial name="../Dashboard/_ManageSideBar" />

    <div class="main-panel">
        <partial name="../Dashboard/_ManageNav2" />


        <div class="content">
            <div class="container-fluid">

                    <h1>@ViewData["Title"]</h1>
                    @{
                        if (@Model.DisplayConfirmAccountLink)
                        {
                                    <p>

                                        Това ще бъде изпратено по имейл: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Натисни за да потвърдиш</a>
                                    </p>
                        }
                        else
                        {
                            <p>
                                Моля проверете емайл адреса си.
                            </p>
                        }
                    }
                </div>
            </div>

            <partial name="../Dashboard/_ManageFooter" />

        </div>
    </div>
