                                                </tbody>
                                            </table>
                                        </div>
                                    }

                                    @if (User.IsInRole("Employer"))
                                    {
                                        <div class="content table-responsive table-upgrade">
                                            <table class="table">
                                                <thead>
                                                <th></th>
                                                <th class="text-center">Free</th>
                                                <th class="text-center">PRO</th>
