        <div class="content">
            <div class="container-fluid">
                <div class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-8 ml-auto mr-auto">
                                <div class="card">
                                    <div class="header text-center">
                                        <h4 class="title">Upgrade To Pro</h4>

                                        <br>
                                    </div>

                                    @if (User.IsInRole("Contestant"))
