@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Купи PRO-акаунт";
    Layout = "/Areas/Identity/Pages/_Layout.cshtml";
}

<div class="wrapper">
    <partial name="../Dashboard/_ManageSideBar" />

    <div class="main-panel">
