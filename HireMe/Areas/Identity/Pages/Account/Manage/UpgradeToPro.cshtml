                                                    <tr class="last-row">
                                                        <td></td>
                                                        <td>
                                                            <a href="#" class="btn btn-round btn-fill btn-default disabled">Current Version</a>
                                                        </td>
                                                        <td>
                                                            <a asp-page="Checkout" class="btn btn-round btn-fill btn-info">Upgrade to PRO</a>
